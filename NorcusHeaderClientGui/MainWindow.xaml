<Window x:Class="NorcusHeaderClientGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorcusHeaderClientGui"
        mc:Ignorable="d"
        Title="NORCUS Header Client" Height="150" Width="350" 
        x:Name="NorcusWindow"
        Closing="NorcusWindow_Closing" WindowStyle="ToolWindow">
    <Window.DataContext>
        <local:NorcusClientViewModel/>
    </Window.DataContext>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Velikost písma:" IsEnabled="False"/>
            <MenuItem Header="12" Command="{Binding FontCommand}" CommandParameter="12"/>
            <MenuItem Header="16" Command="{Binding FontCommand}" CommandParameter="16"/>
            <MenuItem Header="20" Command="{Binding FontCommand}" CommandParameter="20"/>
            <MenuItem Header="24" Command="{Binding FontCommand}" CommandParameter="24"/>
            <MenuItem Header="Orientace:" IsEnabled="False"/>
            <MenuItem Header="Vertikálně" IsCheckable="True" IsChecked="{Binding OrientationIsChecked}"/>
            <MenuItem Header="Nastavení" Click="SettingsMenuItem_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <TextBlock Text="{Binding Client.MessageLabel}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="{Binding FontSize}" TextWrapping="Wrap"/>
    </Grid>
</Window>
